{
    "problemMatcher": [
        {
            "owner": "shellcheck",
            "severity": "notice",
            "pattern": [
                {
                    "regexp": "^.*In ([^\\s]+) line (\\d+):.*$",
                    "file": 1,
                    "line": 2
                },
                {
                    "regexp": "^.+$"
                },
                {
                    "regexp": "^.*(SC\\d+) \\((?=[a-z]+)(error|warning)?[a-z]*\\): ([^\\033]+).*$",
                    "code": 1,
                    "severity": 2,
                    "message": 3,
                    "loop": true
                }
            ]
        }
    ]
}
